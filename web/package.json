{
  "name": "euphrates-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm wasm && vite dev",
    "build": "pnpm wasm && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "wasm": "nix build ..#wasm && jco transpile result/lib/euphrates.wasm -o src/lib/wasm --instantiation"
  },
  "devDependencies": {
    "@bytecodealliance/jco": "^1.15.0",
    "@bytecodealliance/preview2-shim": "github:bytecodealliance/jco#path:packages/preview2-shim",
    "@molarmanful/fe-tools": "^0.3.4",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.43.8",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.14",
    "core-js": "^3.45.1",
    "eslint": "^9.36.0",
    "eslint-plugin-better-tailwindcss": "^3.7.9",
    "eslint-plugin-svelte": "^3.12.4",
    "fflate": "^0.8.2",
    "globals": "^16.4.0",
    "svelte": "^5.39.8",
    "svelte-check": "^4.3.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "core-js",
      "esbuild"
    ]
  }
}
